---
const menuItems = [
  { name: 'Inicio', href: '#' },
  { name: 'Cursos', href: '#courses' },
  { name: 'Categor√≠as', href: '#categories' },
  { name: 'Profesores', href: '#teachers' },
  { name: 'Contacto', href: '#contact' },
];
---

<nav class="fixed w-full bg-white/90 backdrop-blur-sm z-50 shadow-lg">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16">
      <div class="flex items-center">
        <a href="/" class="text-2xl font-bold text-primary">LearnHub</a>
      </div>
      
      <div class="hidden md:flex items-center space-x-8">
        {menuItems.map(item => (
          <a href={item.href} class="text-gray-700 hover:text-primary transition-colors">
            {item.name}
          </a>
        ))}
        <button class="bg-primary text-white px-6 py-2 rounded-full hover:bg-primary/90 transition-colors">
          Registrarse
        </button>
      </div>

      <div class="md:hidden flex items-center">
        <button id="mobile-menu-button" class="text-gray-700">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>
</nav>

<div id="mobile-menu" class="hidden md:hidden fixed top-16 left-0 w-full bg-white shadow-lg z-40">
  <div class="px-4 py-2 space-y-2">
    {menuItems.map(item => (
      <a href={item.href} class="block text-gray-700 hover:text-primary transition-colors py-2">
        {item.name}
      </a>
    ))}
    <button class="w-full bg-primary text-white px-6 py-2 rounded-full hover:bg-primary/90 transition-colors">
      Registrarse
    </button>
  </div>
</div>

<script>
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>