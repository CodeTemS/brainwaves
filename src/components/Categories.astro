---
const categories = [
  { name: "Programación", count: 150, icon: "💻" },
  { name: "Diseño", count: 85, icon: "🎨" },
  { name: "Negocios", count: 120, icon: "💼" },
  { name: "Marketing", count: 95, icon: "📈" },
  { name: "Música", count: 70, icon: "🎵" },
  { name: "Fotografía", count: 60, icon: "📸" }
];
---

<section class="py-20 bg-white" id="categories">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-center mb-12" data-aos="fade-up">Categorías Populares</h2>
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-6">
        {categories.map(category => (
          <div class="bg-white p-6 rounded-xl shadow-lg text-center hover:shadow-xl transition-shadow cursor-pointer" data-aos="fade-up">
            <span class="text-4xl mb-4 block">{category.icon}</span>
            <h3 class="text-lg font-semibold mb-2">{category.name}</h3>
            <p class="text-gray-600">{category.count} cursos</p>
          </div>
        ))}
      </div>
    </div>
  </section>